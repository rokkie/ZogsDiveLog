{
  "env": {
    "browser": true,
    "es6"    : true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion" : 6,
    "sourceType"  : "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "no-console"     : 0,
    "indent"         : [2, 2, {"VariableDeclarator": {"var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
    "linebreak-style": [2, "unix"],
    "quotes"         : [2, "single"],
    "semi"           : [2, "always"]
  },
  "plugins": [
    "html"
  ]
}
